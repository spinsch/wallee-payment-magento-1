<layout>
	<checkout_onepage_index>
		<reference name="head">
			<action method="addItem"><type>js</type><name>wallee/payment/checkout.js</name><params/><if/></action>
			<action method="addItem"><type>js</type><name>wallee/payment/checkout/magento-onepage.js</name><params/><if/></action>
		</reference>
		<reference name="content">
       		<block type="wallee_payment/payment_checkout" name="wallee_payment_checkout" after="-" />
  		</reference>
	</checkout_onepage_index>
	
	<onestepcheckout_index_index>
